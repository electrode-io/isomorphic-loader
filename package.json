{
  "name": "isomorphic-loader",
  "version": "1.6.3",
  "description": "Webpack isomorphic loader tools to make Node require handle files like images for Server Side Rendering (SSR)",
  "main": "index.js",
  "scripts": {
    "wp": "webpack --config test/webpack.config.js",
    "wpd": "webpack-dev-server --config test/webpack.config.js",
    "test": "npm run lint && mocha test/spec/*.js",
    "coverage": "nyc --all --reporter=lcov --reporter=text --reporter=text-summary npm test",
    "lint": "eslint *.js lib/*.js test/**/*.js",
    "prepublish": "npm run lint && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/isomorphic-loader.git"
  },
  "keywords": [
    "webpack",
    "isomorphic",
    "loader",
    "images",
    "assets",
    "SSR",
    "react",
    "server",
    "side",
    "rendering",
    "node",
    "nodejs",
    "require"
  ],
  "author": "Joel Chen",
  "license": "MIT",
  "dependencies": {
    "deep-extend": "^0.5.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "clone": "^1.0.2",
    "eslint": "^2.6.0",
    "fetch": "^1.0.1",
    "file-loader": "^0.8.5",
    "mocha": "^2.4.5",
    "nyc": "^11.0.2",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": true,
    "all": true,
    "exclude": [
      "cli",
      "xclap.js",
      "test",
      "coverage"
    ]
  },
  "readme": "https://github.com/jchip/isomorphic-loader/blob/master/README.md"
}
