{
  "name": "isomorphic-loader",
  "version": "1.6.5",
  "description": "Webpack isomorphic loader tools to make Node require handle files like images for Server Side Rendering (SSR)",
  "main": "index.js",
  "scripts": {
    "wp": "webpack --config test/webpack.config.js",
    "wpd": "webpack-dev-server --config test/webpack.config.js",
    "test": "clap test",
    "coverage": "clap check",
    "lint": "clap lint",
    "prepublishOnly": "clap check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/isomorphic-loader.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "webpack",
    "isomorphic",
    "loader",
    "images",
    "assets",
    "SSR",
    "react",
    "server",
    "side",
    "rendering",
    "node",
    "nodejs",
    "require"
  ],
  "author": "Joel Chen",
  "license": "Apache-2.0",
  "dependencies": {
    "deep-extend": "^0.5.0"
  },
  "devDependencies": {
    "clone": "^1.0.2",
    "electrode-archetype-njs-module-dev": "^3.0.0",
    "fetch": "^1.0.1",
    "file-loader": "^0.8.5",
    "rimraf": "^2.5.2",
    "webpack": "^3",
    "webpack-dev-server": "^2"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "coverage",
      "*clap.js",
      "gulpfile.js",
      "dist",
      "test"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": true
  },
  "engines": {
    "node": ">=6"
  }
}
